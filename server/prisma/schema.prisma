generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Students {
  name       String    @id
  cohort     String
  courses    Json      // Store course name and image URL in JSON format
  dateJoined DateTime  @db.Date
  lastLogin  DateTime
  status     Boolean
}
